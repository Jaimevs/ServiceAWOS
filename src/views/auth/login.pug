extends ../layout/index 
block content 
    div.py-10.tracking-wide.bg-gray-100
        h1.text-center.text-4xl.my-2.font-extrabolder(class="text-JS") JafaService 
            span.font-normal.text-black  
        
        h2.text-center.text-3xl.font-extrabold Iniciar sesión

        if errors 
            div#message.mt-8.mx-auto.max-w-xl(class="text-center time")
                div.text-center(class="bg-red-500 text-white uppercase font-bold rounded-t px-4 mt-1 max-w-xl") danger
                
                div.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold(class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700  max-w-xl" )
                    each error in errors 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-lg.border.border-gray-400.shadow-2xl
                form.space-y-5(action="/login" method="POST" noValidate)
                    .grid.justify-items-center
                        <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
                        <dotlottie-player class="mt-0"src="https://lottie.host/4e47243c-8281-4647-9bec-c546b4495d06/kUyY0z28bz.json" background="transparent" speed="1" style="width: 300px; height: 300px" direction="1" mode="bounce" loop autoplay></dotlottie-player>
                    div.mb-4
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="email") Correo Electrónico: 
                        input#email.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="jafaservice@email.com" name="email" value=user && user.email ? user.email: '')
                    
                    div.mb-4
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="password") Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="*******" name="password" type="password") 
                    
                    input#btn-login.w-full.bg-white.text-black.border.border-black(class="text-black font-bold py-3 cursor-pointer rounded-lg hover:bg-gray-800 hover:text-white" type="submit" value="Iniciar sesion")

                    div.items-center.justify-between.pt-5.text-center
                        a.text-sm.text-gray-800(href="/login/password-recovery" class="hover:underline decoration-4 decoration-red-200") ¿Olvidaste tu contraseña?, Recupérala.


                div.flex.items-center.justify-center.mt-5
                    a.w-full.flex.items-center.justify-start(class "text-black hover:underline" href="/inicio")
                        img(src="img/back.png", alt="Texto alternativo de la imagen" class="mr-3 w-10 h-10 rounded-full")
                        span Ir a la página principal
